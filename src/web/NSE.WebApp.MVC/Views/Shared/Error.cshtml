@model NSE.WebApp.MVC.Models.ErrorViewModel
@{
    ViewData["Title"] = "Ocorreu um erro";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@{ 
    if (Model == null)
    {
       <div>
           <h2>Ooops! Ocorreu um erro, mas não se preocupe. Nosso time será avisado e iremos corrigir a falha em breve!</h2>
       </div>
    }
    else
    {
        <div>
            <h2>@Html.Raw(Model.Mensagem))</h2>
        </div>
    }
}